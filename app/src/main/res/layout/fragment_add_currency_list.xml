<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackBlue"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColorHint="#51718C"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:startIconDrawable="@drawable/search_box_icon"
        app:boxStrokeWidthFocused="0dp"
        app:boxStrokeWidth="0dp"
        app:cursorColor="@color/gray"
        app:startIconTint="@color/light_gray"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchEdt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/search_box_hint"
            android:paddingStart="40dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:background="@drawable/shape_search_box"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="16sp"/>
    </com.google.android.material.textfield.TextInputLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/addCurrencyList"
            app:layout_constraintStart_toStartOf="@+id/searchInput"
            app:layout_constraintEnd_toEndOf="@+id/searchInput"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/searchInput"
            android:layout_marginTop="5dp"
            />


</androidx.constraintlayout.widget.ConstraintLayout>