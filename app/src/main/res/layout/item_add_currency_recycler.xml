<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blackBlue"
    android:backgroundTint="@color/blackBlue">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/blackBlue"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blackBlue"
            android:backgroundTint="@color/blackBlue">

            <ImageView
                android:id="@+id/imgItemAddCurrencyList"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:src="@drawable/currencies_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/textItemAddList"
                app:layout_constraintBottom_toBottomOf="@id/subTextItemAddList"
                 />

            <TextView
                android:id="@+id/textItemAddList"
                android:layout_width="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/subTextItemAddList"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Title" />

            <TextView
                app:layout_constraintEnd_toEndOf="@+id/textItemAddList"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/subTextItemAddList"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="@color/gray"
                android:gravity="center_vertical"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/textItemAddList"
                tools:text="subTitle" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>