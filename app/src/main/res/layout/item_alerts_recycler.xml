<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="@color/blackBlue"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blackBlue"
            android:backgroundTint="@color/blackBlue">

            <TextView
                android:id="@+id/nameCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Name Currency"
                android:textColor="@color/white"
                android:textSize="19sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/maximumPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:paddingStart="5dp"
                android:text="سقف تعیین شده"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@id/nameCurrency"
                app:layout_constraintTop_toBottomOf="@+id/nameCurrency" />

            <TextView
                android:id="@+id/maxPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:gravity="center_vertical"
                android:text="مبلغ سقف"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/maximumPrice"
                app:layout_constraintEnd_toStartOf="@id/maximumPrice"
                app:layout_constraintTop_toTopOf="@+id/maximumPrice" />

            <TextView
                android:id="@+id/minimumPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:paddingStart="5dp"
                android:text="کف تعیین شده"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@id/nameCurrency"
                app:layout_constraintTop_toBottomOf="@+id/maximumPrice" />

            <TextView
                android:id="@+id/minPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:gravity="center_vertical"
                android:text="مبلغ کف"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/minimumPrice"
                app:layout_constraintEnd_toStartOf="@id/minimumPrice"
                app:layout_constraintTop_toTopOf="@+id/minimumPrice" />

            <TextView
                android:id="@+id/isActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="غیر فعال"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/minimumPrice"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="@id/minimumPrice"
                />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/isActive"
                app:layout_constraintTop_toTopOf="@+id/isActive"
                app:layout_constraintBottom_toBottomOf="@id/isActive"
                android:layout_margin="5dp"
                android:buttonTint="@color/white"
                android:padding="0dp"
                />

            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_delete"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>