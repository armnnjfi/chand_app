<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackBlue"
    tools:context=".ConverterFragment">

    <!-- آیکون بازگشت -->
    <ImageView
        android:id="@+id/arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/arrow_back"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/mainTitle" />

    <!-- عنوان -->
    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="7dp"
        android:text="@string/converter"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/arrow_back"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- بخش From -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fromLayout"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_rounded_gray_converter"
        android:clipToOutline="false"
        android:elevation="4dp"
        android:outlineProvider="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainTitle">

        <Spinner
            android:id="@+id/fromCurrencySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/white"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fromAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:hint="Enter amount"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/fromCurrencySpinner"
            app:layout_constraintStart_toEndOf="@+id/fromCurrencySpinner" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- بخش To -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toLayout"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_rounded_gray_converter"
        android:clipToOutline="false"
        android:elevation="4dp"
        android:outlineProvider="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fromLayout">

        <Spinner
            android:id="@+id/toCurrencySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/white"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/toAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:clickable="false"
            android:focusable="false"
            android:hint="Converted amount"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/toCurrencySpinner"
            app:layout_constraintStart_toEndOf="@+id/toCurrencySpinner"
            app:layout_constraintTop_toTopOf="@+id/toCurrencySpinner" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- دکمه Swap (شناور روی fromLayout و toLayout) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/swapButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/white"
        android:elevation="30dp"
        android:textColor="@color/blackBlue"
        android:translationZ="30dp"
        app:cornerRadius="60dp"
        app:icon="@drawable/converter_swap"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconSize="45dp"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/toLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fromLayout"
        app:layout_constraintVertical_bias="0.5" /> <!-- قرارگیری مرکزی عمودی -->

</androidx.constraintlayout.widget.ConstraintLayout>